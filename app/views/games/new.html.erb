<div class="main-content">
  <h1>Your letters</h1>
  <ul class="list-inline">
    <% @letters.each do |letter| %>
      <li class="list-inline-item"><h3><%= letter %></h3></li>
      <%end%>
  </ul>
  <form action="/score" method="post" id="word">
    <input type="text" name="word" id="input-field" placeholder="The longest word you can find...">
    <input type="submit" value="Play" class="btn btn-success">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
